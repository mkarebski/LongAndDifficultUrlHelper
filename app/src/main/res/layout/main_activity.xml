<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText
        android:id="@+id/url_et"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="71dp"
        android:ems="10"
        android:inputType="textPersonName" />

    <TextView
        android:id="@+id/show_ip"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/url_et"
        android:layout_marginBottom="168dp" />

    <ToggleButton
        android:id="@+id/toggle_server"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/url_et"
        android:layout_marginStart="63dp"
        android:layout_marginTop="67dp"
        android:checked="false"
        android:text="ToggleButton" />

    <Button
        android:id="@+id/clear_url"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/toggle_server"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="67dp"
        android:text="CLEAR URL" />
</RelativeLayout>